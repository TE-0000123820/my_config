[user]
    email = Norito.Kato@sony.com
    name = Norito Kato
[alias]
    lg = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short
    lgs = log --stat
    lga = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short --all
    lgo = log --oneline --graph --decorate
    lgm = log --author Norito --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short
    co = checkout
    d = diff
    l = log --color
    lp = log -p
    a = add
    st = status
    b = branch
    p = pull
    cl = clone --recursive
    chp = cherry-pick
    root = rev-parse --show-toplevel
[core]
  pager = env LESSCHARSET=utf-8 less -+F -m -R
